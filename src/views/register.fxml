<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.RegisterController"  stylesheets="@styles.css">
	  
  
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="350">
        <Label text="Đăng Ký Tài Khoản" styleClass="title-label"/>

        <TextField fx:id="usernameField" promptText="Tên đăng nhập"/>
        <PasswordField fx:id="passwordField" promptText="Mật khẩu"/>
        <TextField fx:id="emailField" promptText="Email"/>
        
        <Button text="Đăng ký" onAction="#handleRegister"/>
        <Button text="Quay lại đăng nhập" onAction="#switchToLogin"/>
        
        <Label fx:id="messageLabel" styleClass="error-label"/>
    </VBox>
</AnchorPane>
