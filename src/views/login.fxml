
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController"  stylesheets="@styles.css">

    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">
    
        <Label text="Đăng Nhập" styleClass="title-label"/>

        <TextField fx:id="usernameField" promptText="Tên đăng nhập"/>
        <PasswordField fx:id="passwordField" promptText="Mật khẩu"/>

        <Button text="Đăng nhập" onAction="#handleLogin"/>
        <Button text="Chưa có tài khoản? Đăng ký ngay" onAction="#switchToRegister"/>
        
        <Label fx:id="messageLabel" styleClass="error-label"/>
    </VBox>
</AnchorPane>
