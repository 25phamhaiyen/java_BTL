<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@/styles/home.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
    <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        
        <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="-130.0">
            <!-- Logo -->
            <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/logo.png" />
                </image>
            </ImageView>
            
            <!-- Tiêu đề -->
            <Label fx:id="lblTitle" styleClass="title-label" />
        </VBox>
        
        <!-- Nút chức năng -->
        <HBox fx:id="buttonBar" alignment="CENTER_LEFT" spacing="0" styleClass="button-bar" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20">
            <Button fx:id="btnLogin" styleClass="button-left" text="Đăng nhập" />

          <ComboBox fx:id="languageCombo" styleClass="button-right" />  
            
          <!-- <Button fx:id="btnLanguage" text="🇻🇳 | 🇺🇸" styleClass="button-right"/>  -->  

        </HBox>
    </AnchorPane>
</AnchorPane>
