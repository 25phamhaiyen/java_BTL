<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.admin.AdminHomeController" 
	stylesheets="@/styles/admin_home.css"
	fitToWidth="true" fitToHeight="true">
    <content>
        <BorderPane>
            <!-- Left Sidebar for Navigation -->
            <left>
                <VBox spacing="10" prefWidth="200" styleClass="sidebar">
                    <Button fx:id="btnAccountManagement" text="Quản lý tài khoản" styleClass="nav-button"/>
                    <Button fx:id="btnStaffManagement" text="Quản lý nhân viên" styleClass="nav-button"/>
                    <Button fx:id="btnCreateWorkSchedule" text="Tạo lịch làm việc" styleClass="nav-button"/>
                    <Button fx:id="btnServices" text="Dịch vụ" styleClass="nav-button"/>
                    <Button fx:id="btnFinance" text="Tài chính" styleClass="nav-button"/>
                    <Button fx:id="btnDetailedDashboard" text="Dashboard chi tiết" styleClass="nav-button"/>
                </VBox>
            </left>

            <!-- Main Content Area -->
            <center>
                <VBox fx:id="centerContent" spacing="20" alignment="CENTER">
                    <Label text="Chào Admin!" styleClass="welcome-label"/>
                </VBox>
            </center>
        </BorderPane>
    </content>
</ScrollPane>