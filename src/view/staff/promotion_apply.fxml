<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.Staff.PromotionApplyController"
            stylesheets="@/styles/promotion_apply.css"
            styleClass="promotion-root">

    <!-- Title -->
    <top>
        <Label text="Áp Dụng Khuyến Mãi Cho Dịch Vụ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20px;"/>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Bảng dịch vụ -->
            <TableView fx:id="serviceTable" prefHeight="300" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="nameColumn" text="Tên dịch vụ" prefWidth="200"/>
                    <TableColumn fx:id="priceColumn" text="Giá (VND)" prefWidth="120"/>
                    <TableColumn fx:id="durationColumn" text="Thời lượng (phút)" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- Chọn khuyến mãi -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Chọn khuyến mãi:"/>
                <ComboBox fx:id="promotionComboBox" prefWidth="250"/>
                <Button fx:id="applyButton" text="Áp dụng" onAction="#applyPromotion"/>
                <Button fx:id="removePromoButton" text="Xóa khuyến mãi" onAction="#removePromotion"/>
            </HBox>

            <!-- Nhập mã code -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Mã khuyến mãi:"/>
                <TextField fx:id="promoCodeField" promptText="Nhập mã" prefWidth="200"/>
                <Label text="Giảm giá:"/>
                <Label fx:id="discountLabel" text="0%" style="-fx-font-weight: bold;"/>
            </HBox>

            <!-- Giá tiền -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Tổng tiền:"/>
                <Label fx:id="totalPriceLabel" text="0 VND" style="-fx-font-size: 16px; -fx-text-fill: green;"/>
                <Label text="Giá sau giảm:"/>
                <Label fx:id="discountedPriceLabel" text="0 VND" style="-fx-font-size: 16px; -fx-text-fill: red;"/>
            </HBox>

            <!-- Các nút thao tác dịch vụ -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Xóa dịch vụ đã chọn" onAction="#removeSelectedService"/>
                <Button text="Xóa tất cả dịch vụ" onAction="#clearAllServices"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom: Nút quay lại -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="← Quay lại" fx:id="backButton" onAction="#goBack" styleClass="back-button"/>
        </HBox>
    </bottom>

</BorderPane>
