<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="mainContainer" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Staff.StaffController"
stylesheets="@/styles/staff.css">

<!-- Phần header trên cùng -->
<top>
<VBox spacing="10" style="-fx-padding: 10;">
<HBox alignment="CENTER_LEFT" spacing="20">
<Label text="Nhân viên:"/>
<Label fx:id="staffNameLabel"/>
<Label text="Vai trò:"/>
<Label fx:id="staffRoleLabel"/>
<Button fx:id="logoutButton" text="Đăng xuất" onAction="#logout"/>
</HBox>
<Separator />
</VBox>
</top>

<!-- Phần nội dung chính -->
<center>
<HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    <!-- Lịch hôm nay -->
    <VBox spacing="10">
        <Label text="Lịch hôm nay"/>
        <ListView fx:id="todayScheduleLabel" prefHeight="500" prefWidth="200"/>
        <VBox spacing="5">
            <Button fx:id="myScheduleButton" text="Lịch làm việc" onAction="#showMySchedule" prefWidth="200"/>
        </VBox>
    </VBox>

    <!-- Thú cưng cần chăm sóc -->
    <VBox spacing="10">
        <Label text="Thú cưng cần chăm sóc"/>
        <ListView fx:id="petCareListView" prefHeight="500" prefWidth="200"/>
        <VBox spacing="5">
            
            <Button fx:id="promotionButton" text="Khuyến mãi" onAction="#showPromotionView" prefWidth="200"/>
        </VBox>
    </VBox>

    <!-- Booking hôm nay -->
    <VBox spacing="10">
        <Label text="Booking hôm nay"/>
        <ListView fx:id="todayBookingListView" prefHeight="500" prefWidth="200"/>
        <VBox spacing="5">
            <Button fx:id="bookingViewButton" text="Chi tiết đặt lịch hẹn" onAction="#showBookingView" prefWidth="200"/>
            <Button fx:id="invoiceViewButton" text="Hóa đơn" onAction="#showInvoiceView" prefWidth="200"/>
            <Button fx:id="editProfileButton" text="Hồ sơ cá nhân" onAction="#showEditProfile" prefWidth="200"/>
        </VBox>
    </VBox>
</HBox>
</center>

</BorderPane>